from tkinter import messagebox, simpledialog, Tk



if __name__ == '__main__':
    window=Tk()
    window.withdraw


    remarkable = simpledialog.askstring(title='Remarkable',prompt="Name someone for a rekarkable fact about them.")
    if remarkable == 'Ellie':
        messagebox.showinfo(title='Remarkable', message="Ellie loves snatching bread out of people's hands")
    if remarkable == 'George':
        messagebox.showinfo(title='Remarkable', message="")